{
    "name": "evmspecforvscode",
    "publisher": "Certora",
    "displayName": "Certora Verification Language syntax highlighter",
    "description": "Write specifications for EVM bytecode in VS Code.",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.40.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "spec",
            "aliases": ["EVM Spec", "spec"],
            "extensions": [".cvl",".spec"],
            "configuration": "./language-configuration.json"
 
        }],
        "grammars": [{
            "language": "spec",
            "scopeName": "source.spec",
            "path": "./syntaxes/spec.tmLanguage.json"       
        }]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Certora/EVMSpec-VsCodeExtension.git"
    },
    "icon": "img/logo.png"
}